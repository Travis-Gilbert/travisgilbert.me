    <h1 class="font-title text-3xl md:text-4xl font-bold mb-2 flex items-center gap-3">
      <Tag class="w-8 h-8 text-terracotta" />
      Tags
    </h1>
    <p class="text-ink-secondary mb-8">Browse content by topic.</p>
  </section>

  <div class="flex flex-wrap gap-3">
    {sortedTags.map(([slug, { display, count }]) => (
      <a
        href={`/tags/${slug}`}
        class="inline-flex items-center font-mono text-xs uppercase tracking-widest px-3 py-1.5 border border-border text-ink-secondary rounded-lg hover:border-terracotta hover:text-terracotta transition-colors no-underline"
      >
        {display}
        <span class="text-ink-faint">({count})</span>
      </a>
    ))}
  </div>
</BaseLayout>
